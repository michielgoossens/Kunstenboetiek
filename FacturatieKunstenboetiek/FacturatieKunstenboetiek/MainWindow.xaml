            <Button Name="buttonKlant" Width="100" Height="40" Margin="10" Click="buttonKlant_Click">Klant</Button>
            <Button Name="buttonArtikel" Width="100" Height="40" Margin="10" Click="buttonArtikel_Click">Artikel</Button>
    </StackPanel>
    </StackPanel>
</Window>
