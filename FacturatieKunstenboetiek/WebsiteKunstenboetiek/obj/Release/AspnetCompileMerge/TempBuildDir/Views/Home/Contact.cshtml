@model WebsiteKunstenboetiek.Models.EmailForm
@{
    ViewBag.Title = "Kunstenboetiek - Contact";
}
<article class="nonMinHeight">
    <h2>Contact</h2>

    <p>Urnen kunnen besteld worden via mail, gsm &amp; het contact-formulier.</p>

    <p>Ook via de volgende begrafenisondernemers worden mijn urnen aangeboden:</p>

    <p>
        Van Dael<br />
        <a href="http://www.van-dael.be/" target="_blank">www.van-dael.be</a>
    </p>
    <p>
        Uitvaartcentrum 'De Singel'<br />
        <a href="mailto:uitvaart@wasebegrafenissen.be">uitvaart@wasebegrafenissen.be</a><br />
        Singel 13<br />
        9100 St-Niklaas
    </p>

    <p>Sculpturen en keramische beelden kan men steeds in mijn atelier bekijken na afspraak.</p>

    <p>
        Canadalaan 9<br />
        9140 Temse<br />
        0032 485 34 87 86<br />
        <a href="mailto:kunstenboetiek@hotmail.com">kunstenboetiek@hotmail.com</a>
</p>

</article>

<article class="nonMinHeight">
    <h2>Contact-formulier</h2>
    <p id="message">@ViewBag.Message</p>
    @using (Html.BeginForm())
    {
        <div>
            @Html.LabelFor(m => m.Voornaam)
            @Html.TextBoxFor(m => m.Voornaam)
            @Html.ValidationMessageFor(m => m.Voornaam)
        </div>
        <div>
            @Html.LabelFor(m => m.Familienaam)
            @Html.TextBoxFor(m => m.Familienaam)
        </div>
        <div>
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div>
            @Html.LabelFor(m => m.TelNr)
            @Html.TextBoxFor(m => m.TelNr)
        </div>
        <div>
            @Html.LabelFor(m => m.Onderwerp)
            @Html.TextBoxFor(m => m.Onderwerp)
            @Html.ValidationMessageFor(m => m.Onderwerp)
        </div>
        <div>
            @Html.LabelFor(m => m.Bericht)
            @Html.TextAreaFor(m => m.Bericht)
            @Html.ValidationMessageFor(m => m.Bericht)
        </div>
        <input class="button" type="submit" value="Bericht sturen"  />
    }
</article>
